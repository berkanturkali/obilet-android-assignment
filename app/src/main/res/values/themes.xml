<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.OBilet" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/primary_color</item>
    </style>

    <style name="Theme.OBilet" parent="Base.Theme.OBilet" />

    <style name="Theme.OBilet.DialogStyle" parent="Theme.OBilet">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="Theme.OBilet.TabTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.OBilet.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.OBilet.DateButtonStyle" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/on_primary</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="strokeColor">@color/button_color</item>
    </style>

    <style name="Theme.OBilet.FilterCardStyle">
        <item name="background">@android:color/transparent</item>
        <item name="android:backgroundTint">@color/on_primary</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="Theme.OBilet.FindTicketButtonStyle">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="backgroundTint">@color/button_color</item>
        <item name="cornerRadius">4dp</item>
    </style>
</resources>